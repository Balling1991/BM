@model IEnumerable<BallingMaskiner.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">Kontakter</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Slet", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Opret kontakt", "Create", null, new { @class = "btn btn-success btn-sm" })
</p>
