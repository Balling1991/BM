@model IEnumerable<BallingMaskiner.Models.SparePart>
@{
    ViewBag.Title = "Index";
}
<h2 class="page-header">Reservedele</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Slet", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Opret reservedel", "Create", null, new { @class = "btn btn-success btn-sm" })
</p>
