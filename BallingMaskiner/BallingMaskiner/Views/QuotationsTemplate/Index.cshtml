@model IEnumerable<BallingMaskiner.Models.Quotation>

@{
    ViewBag.Title = "Index";
}

<h2> Tilbudsskabeloner </h2>

<table class="table table-condensed table-hover tableShadow" style="table-layout: fixed; word-wrap: break-word;">
    <thead class="theadTopBorder theadSideBorder">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTemplate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="well well-sm">
        @foreach (var item in Model)
        {

            if (Model != null && item.IsTemplate)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsTemplate)
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm deleteButtonPadding" style="vertical-align: middle;" href="@Url.Action("Download", "Quotations", new { id = item.Id })">
                            <i style="color:green" class="glyphicon glyphicon-download-alt"></i><span> Download</span>
                        </a>
                        <a class="btn btn-default btn-sm deleteButtonPadding" href="@Url.Action("Edit", new {id = item.Id})">
                            <i class="glyphicon glyphicon-pencil"></i><span> Rediger</span>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>