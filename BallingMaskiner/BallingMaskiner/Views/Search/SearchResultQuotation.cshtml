@using BallingMaskiner.Models
@model List<QuotationViewModel>

<h2>Tilbud:</h2>

<table class="table table-condensed table-hover tableShadow" style="table-layout: fixed; word-wrap: break-word;">
    <thead class="theadTopBorder theadSideBorder">
        <tr class="tableHeaderHeight">
            <th width="20%">
                Navn
            </th>
            <th width="20%">
                Filnavn
            </th>
            <th width="20%"></th>
        </tr>
    </thead>
    <tbody class="well well-sm">
        @foreach (QuotationViewModel item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td class="text-center">
                    <a class="btn btn-default btn-sm deleteButtonPadding" style="vertical-align: middle;" href="@Url.Action("Download", "Quotations", new { id = item.Id })">
                        <i style="color:green" class="glyphicon glyphicon-download-alt"></i><span> Download</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>