@model BallingMaskiner.Models.SearchViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Søg", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.SearchValue, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kategori", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Category, Model.Categories, "-- Vælg Søgekategori --", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Søg" />
            </div>
        </div>
    </div>
}

@if (Model.SearchExecuted)
{
    @Html.Partial("SearchResult", Model.SearchResultViewModel)
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

