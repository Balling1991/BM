@using BallingMaskiner.Models
@model List<ContactViewModel>

<h2>Kontakter:</h2>

<table class="table table-condensed table-hover tableShadow" style="table-layout: fixed; word-wrap: break-word;">
    <thead class="theadTopBorder theadSideBorder">
        <tr class="tableHeaderHeight">
            <th width="20%">
                Kunde
            </th>
            <th width="20%">
                Navn
            </th>
            <th width="20%">
                Tlf
            </th>
            <th width="20%">
                Email
            </th>
            <th width="20%"></th>
        </tr>
    </thead>
    <tbody class="well well-sm">
        @foreach (ContactViewModel item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Se kunde", "Details", "Customers", new { id = item.CustomerId }, new { @class = "btn btn-default btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>