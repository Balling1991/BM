@model BallingMaskiner.Models.ServiceViewModel

@{
    ViewBag.Title = "Rediger";
}

<h2 class="page-header">Rediger service dokument</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Gem" class="btn btn-success btn-sm" />*@
                <button type="submit" class="btn btn-default btn-sm deleteButtonPadding">
                    <i style="color: green" class="glyphicon glyphicon-floppy-disk"></i><span> Gem</span>
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbage", "Details", "Machines", new { id = Model.MachineId, customerId = Model.CustomerId }, new { @class = "btn btn-default btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
